   <string notr="true">QWidget {
    background-color: #0a1929;
    color: #e0f7fa;
    font-family: 'Segoe UI';
    selection-background-color: #1abc9c;
}

QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #1abc9c, stop:1 #3498db);
    border: 1px solid #107a8c;
    border-radius: 4px;
    color: #0a1929;
    padding: 5px;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #26debf, stop:1 #4aa9ff);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #16a085, stop:1 #2980b9);
}

QPushButton:disabled {
     background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #7abeb0, stop:1 #83bade);
    border: 1px solid #cbcbcb;
}

QLineEdit, QSpinBox, QComboBox {
    background-color: #0d2338;
    border: 1px solid #1abc9c;
    border-radius: 3px;
    padding: 5px;
    color: #e0f7fa;
    selection-background-color: #3498db;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #1abc9c;
}

QComboBox::down-arrow {
    image: url(:/icons/down_arrow.svg);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background: #0d2338;
    color: #e0f7fa;
    selection-background-color: #1abc9c;
    border: 1px solid #3498db;
}

QRadioButton {
    spacing: 5px;
    color: #e0f7fa;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border-radius: 9px;
    border: 2px solid #1abc9c;
    background: #0a1929;
}

QRadioButton::indicator:checked {
    background: qradialgradient(
        cx:0.5, cy:0.5,
        fx:0.5, fy:0.5,
        radius:0.5,
        stop:0 #1abc9c,
        stop:0.5 #0a1929
    );
}

QLineEdit:focus, QSpinBox:focus, QComboBox:focus {
    border: 1px solid #4aa9ff;
}

QSpinBox::up-button, QSpinBox::down-button {
    background-color: #1abc9c;
    width: 16px;
    border: 1px solid #107a8c;
}

QSpinBox::up-arrow, QSpinBox::down-arrow {
    image: url(:/icons/spin_arrows.svg);
    width: 8px;
    height: 8px;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #26debf;
}</string>
